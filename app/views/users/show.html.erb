<%= render 'booklist', user: @user %>

<h1>Users</h1>
<%= @user.each  do |user| %>
  <h4>image</h4>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>name</h4>
  <p><%= @user.body %></p>
  <p><%= link_to "Show", "/books" %></p>
<% end %>

<!-- 新規登録フォーム -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h1>New book</h1>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'CreateBook' %>
<% end %>
