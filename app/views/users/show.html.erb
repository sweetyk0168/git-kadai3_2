<%= render 'booklist', user: @user %>

<!-- Books -->
<h1>Books</h1>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <p>Title</p>
  <span>
    <%= link_to @book.title, book_path(@book.id) %>
  </span>

  <p>Opinion</p>
  <span>
    <%= @book.body %>
  </span>

<!-- 新規登録フォーム -->
<%= form_with model: @newbook, url: '/books', method: :post do |f| %>
  <h1>New book</h1>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'CreateBook' %>
<% end %>
