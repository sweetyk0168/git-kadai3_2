<h2>Editing Book</h2>
<%= form_with model: @book, url: book_path(@book.id),method: :patch do |f| %>
  <label for="Title">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:"Title" %>
  <label for="Opinion">Opinion</label>
  <%= f.text_area :opinion, autofocus: true, id:"inputopinion", placeholder:"opinion" %>
  <%= f.submit "Update Book" %>

  <%= link_to "Show","/books/#{@book.id}" %>
  <%= link_to "Back","/books" %>
<% end %>
