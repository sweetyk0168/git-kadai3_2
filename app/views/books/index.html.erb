<%= render 'users/booklist', user: @user %>
<div><%= flash[:notice] %></div>

<!-- Books -->
<h1>Books</h1>
<p>Title</p>
<p>Opinion</p>
<% @books.each do |book| %>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  <span>
    <%= book.body %>
  </span>
<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- 新規登録フォーム -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h1>New book</h1>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'CreateBook' %>
<% end %>
