<%= render 'users/booklist', user: @user %>

<!-- Books -->
<h2>Book detail</h2>
<span>
  <%= link_to @book.title, book_path(@book.id) %>
</span>
<span>
  <%= @book.body %>
</span>
  <%= link_to @user.name, user_path(@user.id) %>

  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>

<!-- 新規登録フォーム -->
<%= form_with model: @newbook, url: '/books', method: :post do |f| %>
  <h1>New book</h1>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'CreateBook' %>
<% end %>
